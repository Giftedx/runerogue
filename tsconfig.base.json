{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": [
            "es2022",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "dist",
        "archives",
        "external-repos"
    ]
}