{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "lib": [
      "es2018",
      "DOM",
      "esnext"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@client/*": [
        "src/client/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@runerogue/shared": [
        "../shared/dist/index.d.ts"
      ],
      "@runerogue/osrs-data": [
        "../osrs-data/dist/index.d.ts"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "express",
      "ws"
    ],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "jest.config.ts",
    "jest.setup.ts",
    "src/server/game/legacy-schemas-backup/**",
    "src/server/utils/*-fix.ts",
    "src/server/utils/*-polyfill.ts",
    "src/client/**/*",
    "src/assets/**/*",
    "src/types/phaser.d.ts",
    "src/server/simple-index.ts",
    "src/server/utils/room-level-metadata-fix.ts",
    "src/server/utils/symbol-metadata-polyfill.ts",
    "src/server/ecs/systems/AutoCombatSystem.ts",
    "src/server/ecs/systems/MagicCombatSystem.ts",
    "src/server/ecs/systems/RangedCombatSystem.ts",
    "src/server/game/GameRoom.ts",
    "src/server/game/GameRoom.ts",
    "src/server/app.config.ts",
    "src/types/game.d.ts"
  ],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../osrs-data"
    }
  ]
}