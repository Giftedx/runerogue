{
  "name": "@runerogue/game-server",
  "version": "0.1.0",
  "description": "Colyseus multiplayer server for RuneRogue",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --config ../../jest.config.cjs --runInBand",
    "test:watch": "jest --config ../../jest.config.cjs --watch",
    "test:coverage": "jest --config ../../jest.config.cjs --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "docker:build": "docker build -t runerogue-server .",
    "docker:run": "docker run -p 2567:2567 runerogue-server"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/schema": "^3.0.52",
    "@colyseus/ws-transport": "^0.16.5",
    "@runerogue/osrs-data": "workspace:*",
    "@runerogue/shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "bitecs": "^0.3.39",
    "colyseus": "^0.16.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",

    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "graceful-fs": "^4.2.11",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "p-limit": "^6.2.0",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.8.0",

    "reflect-metadata": "^0.2.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/graceful-fs": "^4.1.9",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "colyseus.js": "^0.16.19",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "websocket",
    "runerogue",
    "game-server"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git",
    "directory": "packages/game-server"
  }
}
