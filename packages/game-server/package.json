{
  "name": "@runerogue/game-server",
  "version": "0.1.0",
  "type": "module",
  "description": "Colyseus multiplayer server for RuneRogue",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "docker:build": "docker build -t runerogue-server .",
    "docker:run": "docker run -p 2567:2567 runerogue-server"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/schema": "^3.0.39",
    "bcryptjs": "^3.0.2",
    "colyseus": "^0.16.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "graceful-fs": "^4.2.11",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "p-limit": "^6.2.0",
    "pg": "^8.11.3",
    "redis": "^5.5.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^5.0.2",
    "@types/graceful-fs": "^4.1.9",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.10.2",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "websocket",
    "runerogue",
    "game-server"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git",
    "directory": "packages/game-server"
  }
}
