{
  "name": "@runerogue/game-server",
  "version": "0.1.0",
  "description": "Colyseus multiplayer server for RuneRogue",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "docker:build": "docker build -t runerogue-server .",
    "docker:run": "docker run -p 2567:2567 runerogue-server"
  },
  "dependencies": {
    "colyseus": "^0.15.17",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "@colyseus/schema": "^1.0.44",
    "@colyseus/monitor": "^0.15.12",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.2",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "eslint": "^8.49.0",
    "rimraf": "^5.0.1"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "websocket",
    "runerogue",
    "game-server"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git",
    "directory": "packages/game-server"
  }
} 