{
  "name": "runerogue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "OSRS-inspired multiplayer roguelike survival game for Discord Activities",
  "scripts": {
    "dev": "pnpm -r --parallel --stream run dev",
    "build": "pnpm -r run build",
    "start": "pnpm -r run start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "RUN_INTEGRATION=1 jest --config jest.integration.cjs",
    "server:dev": "pnpm --filter @runerogue/game-server dev",
    "type-check": "pnpm -r exec tsc --noEmit",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format --if-present",
    "clean": "pnpm -r exec rm -rf dist .turbo node_modules/.cache",
    "setup": "node scripts/setup-dev.js",
    "monitor": "node scripts/monitor-performance.js",
    "precommit": "pnpm type-check && pnpm test -- --testPathIgnorePatterns=\"archived\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git"
  },
  "keywords": [
    "osrs",
    "oldschool-runescape",
    "vampire-survivors",
    "discord",
    "multiplayer",
    "roguelike",
    "typescript",
    "colyseus"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT",
  "dependencies": {
    "@colyseus/ecs": "0.4.0-alpha.4",
    "@colyseus/schema": "^3.0.52",
    "colyseus": "0.16.4",
    "colyseus.js": "^0.16.19",
    "reflect-metadata": "^0.2.2"
  }
}
