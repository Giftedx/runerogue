{
  "name": "runerogue",
  "version": "0.1.0",
  "description": "RuneRogue - OSRS meets Vampire Survivors on Discord",
  "private": true,
  "workspaces": [
    "packages/*",
    "server-ts",
    "client"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "lerna run lint",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "setup": "npm run bootstrap && npm run build",
    "osrs-data:dev": "npm run dev --workspace=packages/osrs-data",
    "game-server:dev": "npm run dev --workspace=packages/game-server",
    "discord-client:dev": "npm run dev --workspace=packages/discord-client"
  },
  "dependencies": {
    "@runerogue/shared": "workspace:*",
    "colyseus.js": "^0.16.19",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git"
  },
  "keywords": [
    "osrs",
    "oldschool-runescape",
    "vampire-survivors",
    "discord",
    "multiplayer",
    "roguelike",
    "typescript",
    "colyseus"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT"
}
