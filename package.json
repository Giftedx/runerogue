{
  "name": "runerogue-monorepo",
  "version": "0.1.0",
  "type": "module",
  "description": "RuneRogue - OSRS meets Vampire Survivors on Discord",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rimraf node_modules coverage dist",
    "server:dev": "pnpm --filter \"@runerogue/server\" dev",
    "client:dev": "pnpm --filter \"@runerogue/phaser-client\" dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm -r exec tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "babel-jest": "^30.0.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.34.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aggis/runerogue.git"
  },
  "keywords": [
    "osrs",
    "oldschool-runescape",
    "vampire-survivors",
    "discord",
    "multiplayer",
    "roguelike",
    "typescript",
    "colyseus"
  ],
  "author": "RuneRogue Development Team",
  "license": "MIT",
  "dependencies": {
    "@colyseus/ecs": "0.4.0-alpha.4",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^2.7.0"
  }
}
