# RuneRogue Development Environment

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
DEBUG=true

# Server
HOST=0.0.0.0
COLYSEUS_WS_PORT=2567
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://mongodb:27017/runerogue_dev
REDIS_URL=redis://redis:6379/0

# Security
JWT_SECRET=dev_jwt_secret_change_in_production
SESSION_SECRET=dev_session_secret_change_in_production

# Discord OAuth2
DISCORD_CLIENT_ID=your_development_client_id
DISCORD_CLIENT_SECRET=your_development_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
DISCORD_BOT_TOKEN=your_development_bot_token

# Monitoring
SENTRY_DSN=

# Feature Flags
ENABLE_MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window
