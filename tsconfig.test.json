{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.js",
    "packages/**/*.cjs",
    "packages/**/*.mjs",
    "jest.setup.js",
    "jest.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}