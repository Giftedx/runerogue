# RuneRogue Staging Environment

# Application
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info
DEBUG=false

# Server
HOST=0.0.0.0
COLYSEUS_WS_PORT=2567
FRONTEND_URL=https://staging.runerogue.app

# Database
MONGODB_URI=${MONGODB_URI}
REDIS_URL=${REDIS_URL}

# Security
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# Discord OAuth2
DISCORD_CLIENT_ID=${DISCORD_CLIENT_ID}
DISCORD_CLIENT_SECRET=${DISCORD_CLIENT_SECRET}
DISCORD_REDIRECT_URI=https://staging.runerogue.app/auth/discord/callback
DISCORD_BOT_TOKEN=${DISCORD_BOT_TOKEN}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
ENABLE_MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=500  # Max requests per window
